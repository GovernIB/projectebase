<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>ProjecteBase: API REST</display-name>

    <!-- Alternativa la definició d'una classe Application -->
    <!--
    <servlet>
        <servlet-name>javax.ws.rs.core.Application</servlet-name>
    </servlet>
    <servlet-mapping>
        <servlet-name>javax.ws.rs.core.Application</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping>
    -->

    <!-- Paràmetre que indica els locales soportats -->
    <context-param>
        <param-name>es.caib.projectebase.api.supportedLocales</param-name>
        <param-value>ca,es</param-value>
    </context-param>

    <security-constraint>
        <display-name>Accés restringit a adminsitradors</display-name>
        <web-resource-collection>
            <web-resource-name>restringit</web-resource-name>
            <description>Accions de modificació de dades</description>
            <url-pattern>/services/*</url-pattern>
            <http-method>POST</http-method>
            <http-method>PUT</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>PBS_ADMIN</role-name>
        </auth-constraint>
        <!-- Si requerim SSL -->
        <!--
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
        -->
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>Govern de les Illes Balears</realm-name>
    </login-config>

    <security-role>
        <role-name>PBS_ADMIN</role-name>
    </security-role>

</web-app>
