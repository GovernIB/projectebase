<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd"
             version="2.2">
    <persistence-unit name="projectebasePU" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/projectebaseDS</jta-data-source>

        <!-- Llista de classes persistents -->
        <class>es.caib.projectebase.persistence.model.UnitatOrganica</class>
        <class>es.caib.projectebase.persistence.model.Procediment</class>

        <!-- Activar cache només per aquelles entitats on volguem expressament -->
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
        <!-- Sempre activar la validació de les propietats -->
        <validation-mode>CALLBACK</validation-mode>

        <properties>
            <!-- Per les propietats estandard veure punt 8.2.1.9 de l'especificació JPA -->

            <!--
            Normalment Hibernate obté el dialecte correcte a partir de les metadades de la connexió.
            Per mor d'un bug a Hibernate 5.3.x, amb versions d'Oracle superiors a la 12 (18 o 19), no ho resòl bé.
                https://github.com/hibernate/hibernate-orm/pull/3018
            Cal fixar la següent propietat
            -->
            <!--
            <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle12cDialect"/>
            -->

            <!-- Afecta molt al rendiment. A entorn de producció, sempre a false -->
            <property name="hibernate.show_sql" value="${persistenceXml.hibernate.showSql}"/>
            <!-- Evita que es carreguin les relacions només per accedir al id -->
            <property name="hibernate.jpa.compliance.proxy" value="false"/>
        </properties>
    </persistence-unit>
</persistence>