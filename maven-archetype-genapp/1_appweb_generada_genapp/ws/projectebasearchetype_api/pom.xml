<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
	
   <groupId>org.fundaciobit.projectebase.archetype</groupId>
   <artifactId>projectebasearchetype-ws-api</artifactId>  
   <version>1.0.0</version>
   <packaging>jar</packaging>

    <parent>
        <groupId>org.fundaciobit.projectebase.archetype</groupId>
        <artifactId>projectebasearchetype-ws</artifactId>
        <version>1.0.0</version>
    </parent>

    <name>ProjecteBaseArchetype WS - API</name>


    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
	
    <build>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.5.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>2.1</version>
				<executions>
				  <execution>
					<phase>package</phase>
					<goals>
					  <goal>shade</goal>
					</goals>
					<configuration>
					  <filters>
						<filter>
						  <artifact>org.fundaciobit.projectebase.archetype:projectebasearchetype-utils</artifact>
						  <includes>
							<include>org/fundaciobit/projectebase/archetype/utils/Constants.*</include>
						  </includes>
						</filter>
                        <filter>
						  <artifact>org.fundaciobit:genapp-core</artifact>
						  <includes>
							<include>org/fundaciobit/genapp/common/i18n/I18N*.*</include>
						  </includes>
						</filter>
					  </filters>
					</configuration>
				  </execution>
				</executions>
			</plugin>

            
            
            
			
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.6</version>
				<executions>
				  <execution>
					<id>copy-resources</id>				
					<phase>validate</phase>
					<goals>
					  <goal>copy-resources</goal>
					</goals>
					<configuration>
					  <outputDirectory>${basedir}/src/main/resources</outputDirectory>
					  <resources>          
						<resource>
						  <directory>${basedir}/../../logic/src/main/resources</directory>
							<includes>
							   <include>logicmissatges_*.properties</include>
							   <include>genapp_*.properties</include>
							   <include>projectebasearchetype_genapp_*.properties</include>
							</includes>
						  <filtering>true</filtering>
						</resource>
					  </resources>
					  <overwrite>true</overwrite>
					</configuration>            
				  </execution>
				</executions>
			</plugin>
			
			
		</plugins>

    </build>

 <profiles>
    <profile>
      <id>regenerateapi</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>                  
          <name>regenerateapi</name>
        </property>
      </activation>
      <build>
        <plugins>       
            
          <plugin>
            <groupId>org.apache.cxf</groupId>
            <artifactId>cxf-java2ws-plugin</artifactId>
            <version>${cxf.version}</version>
            <dependencies>
              <dependency>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-rt-frontend-jaxws</artifactId>
                <version>${cxf.version}</version>
              </dependency>

              <dependency>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-rt-frontend-simple</artifactId>
                <version>${cxf.version}</version>
              </dependency>

              <dependency>
                <groupId>org.fundaciobit.projectebase.archetype</groupId>
                <artifactId>projectebasearchetype-ws-server</artifactId>
                <version>1.0.0</version>
                <scope>compile</scope>
              </dependency>

              <dependency>
                <groupId>org.fundaciobit.projectebase.archetype</groupId>
                <artifactId>projectebasearchetype-jpa</artifactId>
                <version>1.0.0</version>
                <scope>compile</scope>
              </dependency>

              <dependency>
                <groupId>org.fundaciobit.projectebase.archetype</groupId>
                <artifactId>projectebasearchetype-logic</artifactId>
                <version>1.0.0</version>
                <scope>compile</scope>
              </dependency>


            </dependencies>

            <executions>

              <execution>
                <id>generate-wsdl-ProjecteBaseArchetypeHelloWorldWs</id>
                <phase>generate-sources</phase>
                <configuration>
                  <className>org.fundaciobit.projectebase.archetype.ws.v1.impl.ProjecteBaseArchetypeHelloWorldWsImpl</className>
                  <genWsdl>true</genWsdl>                           
                  <verbose>true</verbose>
                  <frontend>jaxws</frontend>
                  <databinding>jaxb</databinding>
                  <outputFile>${basedir}/src/main/resources/wsdl/ProjecteBaseArchetypeHelloWorld.wsdl</outputFile>
                  <argline>-s ${basedir}/code -portname ProjecteBaseArchetypeHelloWorldWs -address http://localhost:8080/projectebasearchetype/ws/v1/ProjecteBaseArchetypeHelloWorld</argline>
                </configuration>
                <goals>
                  <goal>java2ws</goal>
                </goals>
              </execution>
              
              <execution>
                <id>generate-wsdl-ProjecteBaseArchetypeHelloWorldWithSecurityWs</id>
                <phase>generate-sources</phase>
                <configuration>
                  <className>org.fundaciobit.projectebase.archetype.ws.v1.impl.ProjecteBaseArchetypeHelloWorldWithSecurityWsImpl</className>
                  <genWsdl>true</genWsdl>                           
                  <verbose>true</verbose>
                  <frontend>jaxws</frontend>
                  <databinding>jaxb</databinding>
                  <outputFile>${basedir}/src/main/resources/wsdl/ProjecteBaseArchetypeHelloWorldWithSecurity.wsdl</outputFile>
                  <argline>-s ${basedir}/code -portname ProjecteBaseArchetypeHelloWorldWithSecurityWs -address http://localhost:8080/projectebasearchetype/ws/v1/ProjecteBaseArchetypeHelloWorldWithSecurity</argline>
                </configuration>
                <goals>
                  <goal>java2ws</goal>
                </goals>
              </execution>
 
              <!--   ADD HERE MORE WS -->


            </executions>
          </plugin>
            

      
      
      <plugin>  
            <groupId>org.jboss.ws.plugins</groupId>  
            <artifactId>maven-jaxws-tools-plugin</artifactId>  
            <version>1.1.1.Final</version>
            <configuration>  
              <verbose>true</verbose>  
              <goalPrefix>wsconsume</goalPrefix>    
              <extension>true</extension>                   
              <sourceDirectory>${project.basedir}/src/main/java</sourceDirectory>   
              <targetPackage>org.fundaciobit.projectebase.archetype.ws.api.v1</targetPackage>
              <bindingFiles>
                <bindingFile>${basedir}/bindings/bindings.xjc</bindingFile>
              </bindingFiles>
            </configuration>  
            <executions>  
              <execution>  
                <id>WSDL to Java API ProjecteBaseArchetypeHelloWorld</id>  
                <goals>
                  <goal>wsconsume</goal>
                </goals>  
                <configuration>  
                  <wsdls> 
                    <wsdl>${basedir}/src/main/resources/wsdl/ProjecteBaseArchetypeHelloWorld.wsdl</wsdl>  
                  </wsdls>
                  <wsdlLocation>http://localhost:8080/projectebasearchetype/ws/v1/ProjecteBaseArchetypeHelloWorld?wsdl</wsdlLocation>
                  <argLine>-n</argLine>
                </configuration>  
              </execution> 
              
              <execution>  
                <id>WSDL to Java API ProjecteBaseArchetypeHelloWorldWithSecurity</id>  
                <goals>
                  <goal>wsconsume</goal>
                </goals>  
                <configuration>  
                  <wsdls> 
                    <wsdl>${basedir}/src/main/resources/wsdl/ProjecteBaseArchetypeHelloWorldWithSecurity.wsdl</wsdl>  
                  </wsdls>
                  <wsdlLocation>http://localhost:8080/projectebasearchetype/ws/v1/ProjecteBaseArchetypeHelloWorldWithSecurity?wsdl</wsdlLocation>
                  <argLine>-n</argLine>
                </configuration>  
              </execution> 
              
              
              <!--   ADD HERE MORE WSDL -->
              

            </executions>  
          </plugin> 
    
            
    </plugins>

    </build>
    </profile>
  </profiles>
	
	<repositories>
	  <repository>
        <id>java.net-m2</id>
        <name>java.net - Maven 2</name>
        <url>https://repository.jboss.org/nexus/content/repositories/java.net-m2</url>
      </repository>
	</repositories>
	
	
    <dependencies>
    
        <dependency>  
          <groupId>org.jboss.ws.cxf</groupId>  
          <artifactId>jbossws-cxf-client</artifactId>  
          <version>4.1.1.Final</version>  
          <scope>provided</scope>  
        </dependency> 
 
		<dependency>
		  <groupId>org.fundaciobit.projectebase.archetype</groupId>
		  <artifactId>projectebasearchetype-utils</artifactId>
		  <version>${project.version}</version>
		  <scope>compile</scope>
		</dependency>

        <dependency>
          <groupId>org.fundaciobit.genapp</groupId>
          <artifactId>genapp-core</artifactId>
          <version>1.0</version>
		  <scope>compile</scope>
		</dependency>

		<dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>2.2</version>
			<scope>test</scope>
        </dependency>

    </dependencies>

</project>
