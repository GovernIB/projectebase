  <modelVersion>4.0.0</modelVersion>
  <groupId>${package}</groupId>
  <artifactId>${parentArtifactId}-api</artifactId>
  <name>${projectname} WS - API</name>
  <version>${version}</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.5.1</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>${package}:${projectname}-utils</artifact>
                  <includes>
                    <include>${packageInPathFormat}/utils/Constants.*</include>
                  </includes>
                </filter>
                <filter>
                  <artifact>org.fundaciobit:genapp-core</artifact>
                  <includes>
                    <include>org/fundaciobit/genapp/common/i18n/I18N*.*</include>
                  </includes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.6</version>
        <executions>
          <execution>
            <id>copy-resources</id>
            <phase>validate</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${symbol_dollar}{basedir}/src/main/resources</outputDirectory>
              <resources>
                <resource>
                  <directory>${symbol_dollar}{basedir}/../../logic/src/main/resources</directory>
                  <includes>
                    <include>logicmissatges_*.properties</include>
                    <include>genapp_*.properties</include>
                    <include>${artifactId}_genapp_*.properties</include>
                  </includes>
                  <filtering>true</filtering>
                </resource>
              </resources>
              <overwrite>true</overwrite>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>regenerateapi</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.cxf</groupId>
            <artifactId>cxf-java2ws-plugin</artifactId>
            <version>${symbol_dollar}{cxf.version}</version>
            <executions>
              <execution>
                <id>generate-wsdl-${projectname}HelloWorldWs</id>
                <phase>generate-sources</phase>
                <goals>
                  <goal>java2ws</goal>
                </goals>
                <configuration>
                  <className>${package}.ws.v1.impl.${projectname}HelloWorldWsImpl</className>
                  <genWsdl>true</genWsdl>
                  <verbose>true</verbose>
                  <frontend>jaxws</frontend>
                  <databinding>jaxb</databinding>
                  <outputFile>${symbol_dollar}{basedir}/src/main/resources/wsdl/${projectname}HelloWorld.wsdl</outputFile>
                  <argline>-s ${symbol_dollar}{basedir}/code -portname ${projectname}HelloWorldWs -address http://localhost:8080/${artifactId}/ws/v1/${projectname}HelloWorld</argline>
                </configuration>
              </execution>
              <execution>
                <id>generate-wsdl-${projectname}HelloWorldWithSecurityWs</id>
                <phase>generate-sources</phase>
                <goals>
                  <goal>java2ws</goal>
                </goals>
                <configuration>
                  <className>${package}.ws.v1.impl.${projectname}HelloWorldWithSecurityWsImpl</className>
                  <genWsdl>true</genWsdl>
                  <verbose>true</verbose>
                  <frontend>jaxws</frontend>
                  <databinding>jaxb</databinding>
                  <outputFile>${symbol_dollar}{basedir}/src/main/resources/wsdl/${projectname}HelloWorldWithSecurity.wsdl</outputFile>
                  <argline>-s ${symbol_dollar}{basedir}/code -portname ${projectname}HelloWorldWithSecurityWs -address http://localhost:8080/${artifactId}/ws/v1/${projectname}HelloWorldWithSecurity</argline>
                </configuration>
              </execution>
            </executions>
            <dependencies>
              <dependency>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-rt-frontend-jaxws</artifactId>
                <version>${symbol_dollar}{cxf.version}</version>
              </dependency>
              <dependency>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-rt-frontend-simple</artifactId>
                <version>${symbol_dollar}{cxf.version}</version>
              </dependency>
              <dependency>
                <groupId>${package}</groupId>
                <artifactId>${parentArtifactId}-server</artifactId>
                <version>${version}</version>
                <scope>compile</scope>
              </dependency>
              <dependency>
                <groupId>${package}</groupId>
                <artifactId>${artifactId}-jpa</artifactId>
                <version>${version}</version>
                <scope>compile</scope>
              </dependency>
              <dependency>
                <groupId>${package}</groupId>
                <artifactId>${artifactId}-logic</artifactId>
                <version>${version}</version>
                <scope>compile</scope>
              </dependency>
            </dependencies>
          </plugin>
          <plugin>
            <groupId>org.jboss.ws.plugins</groupId>
            <artifactId>maven-jaxws-tools-plugin</artifactId>
            <version>1.1.1.Final</version>
            <executions>
              <execution>
                <id>WSDL to Java API ${projectname}HelloWorld</id>
                <goals>
                  <goal>wsconsume</goal>
                </goals>
                <configuration>
                  <wsdls>
                    <wsdl>${symbol_dollar}{basedir}/src/main/resources/wsdl/${projectname}HelloWorld.wsdl</wsdl>
                  </wsdls>
                  <wsdlLocation>http://localhost:8080/${artifactId}/ws/v1/${projectname}HelloWorld?wsdl</wsdlLocation>
                  <argLine>-n</argLine>
                </configuration>
              </execution>
              <execution>
                <id>WSDL to Java API ${projectname}HelloWorldWithSecurity</id>
                <goals>
                  <goal>wsconsume</goal>
                </goals>
                <configuration>
                  <wsdls>
                    <wsdl>${symbol_dollar}{basedir}/src/main/resources/wsdl/${projectname}HelloWorldWithSecurity.wsdl</wsdl>
                  </wsdls>
                  <wsdlLocation>http://localhost:8080/${artifactId}/ws/v1/${projectname}HelloWorldWithSecurity?wsdl</wsdlLocation>
                  <argLine>-n</argLine>
                </configuration>
              </execution>
            </executions>
            <configuration>
              <verbose>true</verbose>
              <goalPrefix>wsconsume</goalPrefix>
              <extension>true</extension>
              <sourceDirectory>${symbol_dollar}{project.basedir}/src/main/java</sourceDirectory>
              <targetPackage>${package}.ws.api.v1</targetPackage>
              <bindingFiles>
                <bindingFile>${symbol_dollar}{basedir}/bindings/bindings.xjc</bindingFile>
              </bindingFiles>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
