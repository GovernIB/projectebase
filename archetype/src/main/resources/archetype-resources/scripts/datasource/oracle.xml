#set( $symbol_pount = '#' )
#set( $symbol_escape = '\' )
#set( $symbol_dollar = '$' )
<datasource jndi-name="java:jboss/datasources/${rootArtifactId}DS" pool-name="${rootArtifactId}DS" enabled="true" use-java-context="true">
	<connection-url>jdbc:oracle:thin:@localhost:1521:sid</connection-url>
	<driver>oracle</driver>
	<new-connection-sql>BEGIN EXECUTE IMMEDIATE 'ALTER SESSION SET CURRENT_SCHEMA = ${rootArtifactId}'; END;</new-connection-sql>
	<security>
		<user-name>${rootArtifactId}</user-name>
		<password>${rootArtifactId}</password>
	</security>
</datasource>