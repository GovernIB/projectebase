<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>${groupId}</groupId>
        <artifactId>${rootArtifactId}</artifactId>
        <version>${version}</version>
    </parent>

    <artifactId>${artifactId}</artifactId>
    <packaging>ear</packaging>
    <name>${projectname} - EAR</name>
    <description>Arxiu d'aplicació EAR de ${projectname}</description>

    <properties>
        <!-- Format del timestamp -->
        <maven.build.timestamp.format>dd/MM/yyyy HH:mm</maven.build.timestamp.format>
    </properties>

    <dependencies>
        <!-- Especificacions i llibreries proporcionades per JBoss -->
        <dependency>
            <groupId>org.jboss.spec</groupId>
            <artifactId>jboss-javaee-8.0</artifactId>
            <type>pom</type>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <!-- Mòduls que van dins l'application.xml -->
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>${rootArtifactId}-ejb</artifactId>
            <type>ejb</type>
        </dependency>
        <!-- BACK START -->
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>${rootArtifactId}-back</artifactId>
            <type>war</type>
        </dependency>
        <!-- BACK END -->
        <!-- FRONT START -->
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>${rootArtifactId}-front</artifactId>
            <type>war</type>
        </dependency>
        <!-- FRONT END -->
        <!-- APIFIRMASIMPLE START -->
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>${rootArtifactId}-apifirmasimple</artifactId>
            <version>${version}</version>
            <type>war</type>
        </dependency>
        <!-- APIFIRMASIMPLE END -->
        <!-- ARXIU START -->
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>${rootArtifactId}-arxiu</artifactId>
            <version>${version}</version>
            <type>war</type>
        </dependency>
        <!-- ARXIU END -->
        <!-- REGISTRE START -->
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>${rootArtifactId}-registre</artifactId>
            <version>${version}</version>
            <type>war</type>
        </dependency>
        <!-- REGISTRE END -->
        <!-- NOTIB START -->
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>${rootArtifactId}-notib</artifactId>
            <version>${version}</version>
            <type>war</type>
        </dependency>
        <!-- NOTIB END -->
        <!-- DIR3CAIB START -->
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>${rootArtifactId}-dir3caib</artifactId>
            <version>${version}</version>
            <type>war</type>
        </dependency>
        <!-- DIR3CAIB END -->
        <!-- DISTRIBUCIO START -->
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>${rootArtifactId}-distribucio</artifactId>
            <version>${version}</version>
            <type>war</type>
        </dependency>
        <!-- DISTRIBUCIO END -->
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>${rootArtifactId}-api</artifactId>
            <type>war</type>
        </dependency>
        <!--
        Mòduls que van dins el lib/
        Tenir en compte a l'hora de incloure dependències només si és imprescindible i no està ja dins
        un mòdul sobre el que es pugui establir una dependència als descriptors.
        https://docs.jboss.org/author/display/AS72/Implicit+module+dependencies+for+deployments
        -->
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>${rootArtifactId}-service</artifactId>
        </dependency>
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>${rootArtifactId}-persistence</artifactId>
        </dependency>
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>${rootArtifactId}-commons</artifactId>
        </dependency>
        <!-- WS START -->
        <!-- WS de ${projectname} -->
        <!--  http://localhost:8080/${rootArtifactId}-ws-server/ws/v1/${projectname}HelloWorld -->
        <!--  http://localhost:8080/${rootArtifactId}-ws-server/ws/v1/${projectname}HelloWorldWithSecurity -->
        <!--  ... -->
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>${rootArtifactId}-ws-server</artifactId>
            <version>${version}</version>
            <type>ejb</type>
        </dependency>
        <!-- WS END -->
    </dependencies>

    <build>
        <!-- El nom del EAR sempre és el nom del projecte d'acord amb un 4.2 de l'Estàndard CAIB -->
        <finalName>${project.parent.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <configuration>
                    <generateApplicationXml>true</generateApplicationXml>
                    <defaultLibBundleDir>lib</defaultLibBundleDir>
                    <includeLibInApplicationXml>false</includeLibInApplicationXml>
                    <!-- Nom mòduls d'acord amb punt 4.2 de l'Estàndard CAIB -->
                    <outputFileNameMapping>@{artifactId}@-@{version}@.@{extension}@</outputFileNameMapping>
                    <version>8</version>
                    <archive>
                        <manifestEntries>
                            <project-version>${project.version}</project-version>
                            <project-buildtime>${maven.build.timestamp}</project-buildtime>
                            <scm-revision>${buildNumber}</scm-revision>
                        </manifestEntries>
                    </archive>
                    <modules>
                        <ejbModule>
                            <groupId>${groupId}</groupId>
                            <artifactId>${rootArtifactId}-ejb</artifactId>
                            <bundleFileName>${rootArtifactId}-ejb.jar</bundleFileName>
                        </ejbModule>
                        <!-- BACK START -->
                        <webModule>
                            <groupId>${groupId}</groupId>
                            <artifactId>${rootArtifactId}-back</artifactId>
                            <contextRoot>/${rootArtifactId}back</contextRoot>
                            <bundleFileName>${rootArtifactId}-back.war</bundleFileName>
                        </webModule>
                        <!-- BACK END -->
                        <!-- FRONT START -->
                        <webModule>
                            <groupId>${groupId}</groupId>
                            <artifactId>${rootArtifactId}-front</artifactId>
                            <contextRoot>/${rootArtifactId}front</contextRoot>
                            <bundleFileName>${rootArtifactId}-front.war</bundleFileName>
                        </webModule>
                        <!-- FRONT END -->
                        <webModule>
                            <groupId>${groupId}</groupId>
                            <artifactId>${rootArtifactId}-api</artifactId>
                            <contextRoot>/${rootArtifactId}/api</contextRoot>
                            <bundleFileName>${rootArtifactId}-api.war</bundleFileName>
                        </webModule>
                        <!-- APIFIRMASIMPLE START -->
                        <webModule>
                            <groupId>${groupId}</groupId>
                            <artifactId>${rootArtifactId}-apifirmasimple</artifactId>
                            <contextRoot>/${rootArtifactId}/apifirmasimple</contextRoot>
                            <bundleFileName>${rootArtifactId}-apifirmasimple.war</bundleFileName>
                        </webModule>
                        <!-- APIFIRMASIMPLE END -->
                        <!-- ARXIU START -->
                        <webModule>
                            <groupId>${groupId}</groupId>
                            <artifactId>${rootArtifactId}-arxiu</artifactId>
                            <contextRoot>/${rootArtifactId}/arxiu</contextRoot>
                            <bundleFileName>${rootArtifactId}-arxiu.war</bundleFileName>
                        </webModule>
                        <!-- ARXIU END -->
                        <!-- REGISTRE START -->
                        <webModule>
                            <groupId>${groupId}</groupId>
                            <artifactId>${rootArtifactId}-registre</artifactId>
                            <contextRoot>/${rootArtifactId}/registre</contextRoot>
                            <bundleFileName>${rootArtifactId}-registre.war</bundleFileName>
                        </webModule>
                        <!-- REGISTRE END -->
                        <!-- NOTIB START -->
                        <webModule>
                            <groupId>${groupId}</groupId>
                            <artifactId>${rootArtifactId}-notib</artifactId>
                            <contextRoot>/${rootArtifactId}/notib</contextRoot>
                            <bundleFileName>${rootArtifactId}-notib.war</bundleFileName>
                        </webModule>
                        <!-- NOTIB END -->
                        <!-- DIR3CAIB START -->
                        <webModule>
                            <groupId>${groupId}</groupId>
                            <artifactId>${rootArtifactId}-dir3caib</artifactId>
                            <contextRoot>/${rootArtifactId}/dir3caib</contextRoot>
                            <bundleFileName>${rootArtifactId}-dir3caib.war</bundleFileName>
                        </webModule>
                        <!-- DIR3CAIB END -->
                        <!-- DISTRIBUCIO START -->
                        <webModule>
                            <groupId>${groupId}</groupId>
                            <artifactId>${rootArtifactId}-distribucio</artifactId>
                            <contextRoot>/${rootArtifactId}/distribucio</contextRoot>
                            <bundleFileName>${rootArtifactId}-distribucio.war</bundleFileName>
                        </webModule>
                        <!-- DISTRIBUCIO END -->
                        <!-- WS START -->
                        <ejbModule>
                            <groupId>${groupId}</groupId>
                            <artifactId>${rootArtifactId}-ws-server</artifactId>
                            <bundleFileName>${rootArtifactId}-ws-server.jar</bundleFileName>
                        </ejbModule>
                        <!-- WS END -->
                    </modules>
                </configuration>
            </plugin>
            <!--
                Per arrencar/desplegar automàticament l'aplicació.
                Documentació ús: https://codehaus-cargo.github.io/cargo/Maven2+plugin.html
                configuració: https://codehaus-cargo.github.io/cargo/Maven2+Plugin+Reference+Guide.html
            -->
            <plugin>
                <groupId>org.codehaus.cargo</groupId>
                <artifactId>cargo-maven2-plugin</artifactId>
                <configuration>
                    <skip>false</skip>
                    <deployables>
                        <deployable>
                            <properties>
                                <name>${project.build.finalName}</name>
                            </properties>
                        </deployable>
                    </deployables>
                </configuration>
            </plugin>
            <!-- Defineix la propietat ${buildNumber} que s'empra al filtrat -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>
